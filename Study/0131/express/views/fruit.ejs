<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    </head>
    <body>
        <!--이미지 바꾸기 연습-->
        <h1>이미지 바꾸기</h1>
        <img src="../public/image/q.jpg" width="300" height="300" alt="" />
        <br />
        <% for(let i = 0; i < fruit.length; i++) { %>
        <button class="btn <%= fruit[i].name %>"><%= fruit[i].kor %></button>
        <% } %>

        <script>
            $('.btn').click(function () {
                let name;
                if ($(this).hasClass('apple')) {
                    name = 'apple';
                } else if ($(this).hasClass('banana')) {
                    name = 'bananas';
                } else if ($(this).hasClass('grapes')) {
                    name = 'grapes';
                } else if ($(this).hasClass('peache')) {
                    name = 'peaches';
                }
                $('img').attr('src', `/public/image/${name}.jpg`);
            });
        </script>
    </body>
</html>
